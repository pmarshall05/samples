{% set link_url = item.url %}
{% set link_base_class = 'link' %}
{% set link_modifiers = item_modifiers %}
{% set link_blockname = menu_class %}
{% set link_attributes = { 'aria-label': item.title } %}


{% extends "@atoms/links/link/link.twig" %}
{% block link_content %}
<div {{ bem('icon', [], menu_class) }}>
  {% if (menu_name) %} {# Populated by Drupal #}
    {% include "@atoms/images/icons/_icon-fontawesome.twig" with {
      icon__name: item.entity.field_icon[0].icon_name,
      icon__style: 'brands',
    } %}
  {% else %}
    {% include "@atoms/images/icons/_icon-fontawesome.twig" with {
      icon__name: item.icon,
      icon__style: 'brands',
    } %}
  {% endif %}
  
</div>
{% endblock %}
