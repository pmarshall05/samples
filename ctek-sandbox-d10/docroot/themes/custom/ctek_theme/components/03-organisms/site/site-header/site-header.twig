{% set header__base_class = 'header' %}
{# If `directory` is defined, set the path relative for Drupal.
 # Otherwise, set the path relative to the Component Library. #}

<header {{ bem(header__base_class) }}>
  <div {{ bem('inner', [], header__base_class) }}>
    <div {{ bem('utility', [], header__base_class) }}>
      {% block header__utility_nav %}
        {% include "@molecules/menus/utility-menu/utility-menu.twig" %}
      {% endblock %}
    </div>
    <div {{ bem('primary', [], header__base_class) }}>
      <div {{ bem('branding', [], header__base_class) }}>
        {% block header__logo %}
          {% include "@organisms/site/site-header/_site-header-branding.twig" %}
        {% endblock %}
      </div>
      <div {{ bem('menu', [], header__base_class) }}>
        {% block header__main_nav %}
          {% include "@molecules/menus/main-menu/main-menu.twig" %}
        {% endblock %}
        <div {{ bem('usertype', [], header__base_class) }}>
          {% block header_usertype_selector %}
            {% include "@molecules/selector/user-type/user-type.twig" %}
          {% endblock %}
        </div>
        <div {{ bem('language-switcher', [], header__base_class) }}>
          {% block header_language_selector %}
            {% include "@molecules/selector/language/language.twig" %}
          {% endblock %}
        </div>
      </div>
    </div>
    
  </div>
</header>
